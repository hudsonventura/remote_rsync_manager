<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:agentWindows.ViewModels"
        x:Class="agentWindows.MainWindow"
        x:DataType="vm:PairingViewModel"
        Title="Remeber Agent - Windows"
        Width="600"
        Height="500"
        MinWidth="500"
        MinHeight="450"
        Icon="icon.ico"
        Background="#F5F5F5">
    
    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Opacity" Value="0.8"/>
        </Style>
    </Window.Styles>

    <ScrollViewer>
        <StackPanel Margin="40,30">
            <!-- Header -->
            <TextBlock Text="Remeber Agent"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#333333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Windows"
                       FontSize="16"
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <!-- Status Card -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="30"
                    Margin="0,0,0,20">
                <StackPanel>
                    <!-- Status Message -->
                    <TextBlock Text="{Binding Status}"
                               FontSize="16"
                               Foreground="#666666"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Pairing Code Section (visible when not paired) -->
                    <StackPanel IsVisible="{Binding IsNotPaired}">
                        <TextBlock Text="Pairing Code"
                                   FontSize="14"
                                   Foreground="#888888"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        
                        <TextBlock Text="{Binding PairingCode}"
                                   FontSize="48"
                                   FontWeight="Bold"
                                   Foreground="#2196F3"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"
                                   LetterSpacing="2"/>

                        <!-- Expiration Info -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Time Remaining"
                                           FontSize="12"
                                           Foreground="#888888"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding TimeRemaining}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#FF9800"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Expires At"
                                           FontSize="12"
                                           Foreground="#888888"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding ExpiresAt}"
                                           FontSize="11"
                                           Foreground="#666666"
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>

                        <!-- Refresh Button -->
                        <Button Content="ðŸ”„ Generate New Code"
                                HorizontalAlignment="Center"
                                Background="#2196F3"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="6"
                                Margin="0,30,0,0"
                                Click="RefreshButton_Click"
                                MinWidth="180"/>
                    </StackPanel>

                    <!-- Paired Status (visible when paired) -->
                    <StackPanel IsVisible="{Binding IsPaired}" HorizontalAlignment="Center">
                        <TextBlock Text="âœ“"
                                   FontSize="64"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Agent Successfully Paired"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Unpair Button -->
                        <Button Content="ðŸ”“ Unpair Agent"
                                HorizontalAlignment="Center"
                                Background="#FF5722"
                                Foreground="White"
                                BorderThickness="0"
                                CornerRadius="6"
                                Margin="0,10,0,0"
                                Click="UnpairButton_Click"
                                MinWidth="180"/>
                        
                        <TextBlock Text="Use this if you need to pair with a different server"
                                   FontSize="11"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,10,0,0"
                                   MaxWidth="300"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Instructions Card -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="25"
                    IsVisible="{Binding IsNotPaired}">
                <StackPanel>
                    <TextBlock Text="How to Pair"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,15"/>
                    
                    <TextBlock TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#666666"
                               LineHeight="24">
                        <Run Text="1. Open your Remeber web application"/>
                        <LineBreak/>
                        <Run Text="2. Navigate to the Agents section"/>
                        <LineBreak/>
                        <Run Text="3. Click on 'Add New Agent'"/>
                        <LineBreak/>
                        <Run Text="4. Enter the pairing code shown above"/>
                        <LineBreak/>
                        <Run Text="5. Your agent will be paired automatically"/>
                    </TextBlock>

                    <Border Background="#FFF3E0"
                            BorderBrush="#FFB74D"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="15"
                            Margin="0,15,0,0">
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="#F57C00">
                            <Run Text="âš  Important: "/>
                            <Run Text="The pairing code expires after 10 minutes. If it expires, click the 'Generate New Code' button to create a new one."/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>

