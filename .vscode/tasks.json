{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "problemMatcher": [],
      "command": "dotnet build --configuration Debug",
      "options": {
        "cwd": "${workspaceFolder}/src/server"
      },
      "label": "server: build"
    },
    {
      "label": "client: run",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/src/client"
      },
      "problemMatcher": {
        "owner": "custom",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "(VITE|ready|Local:)"
        }
      }
    },
    {
      "label": "client: stop",
      "type": "shell",
      "command": "pkill -f 'vite'",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/src/client"
      }
    },
    {
      "label": "start: all",
      "dependsOrder": "parallel",
      "dependsOn": [
        "server: build",
        "client: run"
      ],
      "problemMatcher": []
    },
    {
      "label": "stop: all",
      "dependsOrder": "parallel",
      "dependsOn": [
        "client: stop"
      ],
      "problemMatcher": []
    }
    
  ]
}